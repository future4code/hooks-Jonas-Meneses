{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "removeComments": true,
    "noImplicitAny": true,
  }
}